<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Pages.BillActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="#60000000"
            android:elevation="10dp"
            android:id="@+id/menu_container_in_bill_activity" android:visibility="gone" tools:visibility="visible"
            tools:layout_editor_absoluteY="76dp" tools:layout_editor_absoluteX="24dp">

        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="64dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_margin="44dp"
                android:background="@android:color/holo_orange_dark"
                android:layout_height="match_parent" android:id="@+id/menu_groups_in_bill_view_recycler_view"
                app:layout_constraintStart_toStartOf="parent" tools:layout_editor_absoluteY="44dp"
                android:layout_marginLeft="32dp" android:layout_marginStart="32dp"/>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="0dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="44dp" android:layout_marginRight="44dp"
                app:layout_constraintStart_toEndOf="@+id/menu_groups_in_bill_view_recycler_view"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/menu_groups_in_bill_view_recycler_view"
                app:layout_constraintBottom_toBottomOf="@+id/menu_groups_in_bill_view_recycler_view"
                app:layout_constraintHorizontal_bias="0.52" android:background="#CFA9A9"
                android:id="@+id/menu_in_bill_view_recycler_view">
        </androidx.recyclerview.widget.RecyclerView>
        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar_menugroups_global"
                app:layout_constraintStart_toStartOf="@+id/menu_groups_in_bill_view_recycler_view"
                app:layout_constraintEnd_toEndOf="@+id/menu_groups_in_bill_view_recycler_view"
                app:layout_constraintBottom_toBottomOf="@+id/menu_groups_in_bill_view_recycler_view"
                app:layout_constraintTop_toTopOf="@+id/menu_groups_in_bill_view_recycler_view"
                android:indeterminate="true" tools:visibility="visible" android:visibility="visible"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp" android:id="@+id/menu_entity_container_in_bill_view"
                android:background="#FD91AA90"
                app:layout_constraintBottom_toBottomOf="@+id/menu_in_bill_view_recycler_view"
                app:layout_constraintTop_toTopOf="@+id/menu_in_bill_view_recycler_view"
                app:layout_constraintEnd_toEndOf="@+id/menu_in_bill_view_recycler_view"
                app:layout_constraintStart_toStartOf="@+id/menu_groups_in_bill_view_recycler_view"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp" android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
                android:visibility="gone" tools:visibility="visible">

            <Button
                    android:text="Отмена"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/close_menu_entity_button_in_bill_view" android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="6dp" style="@style/Widget.AppCompat.Button.Small"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/menu_entity_title_in_menu_entity_container"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toStartOf="@+id/menu_entity_amount_in_menu_entity_container"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
            <TextView
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/menu_entity_amount_in_menu_entity_container"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp" android:textSize="16sp" android:textColor="#E91E63"
                    android:textStyle="bold"/>
            <Button
                    android:text="+"
                    android:layout_width="44dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/menu_entity_plus_button_in_menu_entity_container" android:layout_marginEnd="10dp" android:layout_marginRight="10dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="25dp"
                    app:layout_constraintTop_toBottomOf="@+id/menu_entity_title_in_menu_entity_container"/>
            <Button
                    android:text="-"
                    android:layout_width="44dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/menu_entity_minus_button_in_menu_entity_container" app:layout_constraintEnd_toStartOf="@+id/menu_entity_plus_button_in_menu_entity_container"
                    android:layout_marginEnd="13dp" android:layout_marginRight="13dp"
                    app:layout_constraintTop_toTopOf="@+id/menu_entity_plus_button_in_menu_entity_container"/>
            <View
                    android:id="@+id/divider2"
                    android:layout_width="291dp"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/menu_entity_minus_button_in_menu_entity_container"
                    android:layout_marginTop="8dp"/>
            <ToggleButton
                    android:text="ToggleButton"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tab_item_menu_entity_one" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/divider2" android:layout_marginTop="8dp"
                    android:textOff="Один" android:textOn="Один" android:textSize="10sp"/>
            <ToggleButton
                    android:text="ToggleButton"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tab_item_menu_entity_no"
                    app:layout_constraintStart_toEndOf="@+id/tab_item_menu_entity_one"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="@+id/tab_item_menu_entity_one" android:textOff="Без"
                    android:textOn="Без" android:textSize="10sp"/>
            <ToggleButton
                    android:text="ToggleButton"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tab_item_menu_entity_need"
                    app:layout_constraintStart_toEndOf="@+id/tab_item_menu_entity_no"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="@+id/tab_item_menu_entity_no" android:textSize="10sp"
                    android:textOff="Обяз" android:textOn="Обяз" android:checked="true"/>
            <ToggleButton
                    android:text="ToggleButton"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tab_item_menu_entity_time"
                    app:layout_constraintStart_toEndOf="@+id/tab_item_menu_entity_need"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="@+id/tab_item_menu_entity_need" android:textOff="Врем"
                    android:textOn="Врем" android:textSize="10sp"/>
            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/close_menu_entity_button_in_bill_view"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tab_item_menu_entity_one"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    android:id="@+id/additions_recycler_view_in_bill_view"/>
            <Button
                    android:text="Запомнить"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/save_menu_entity_button_in_bill_view" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="6dp"
                    android:background="@color/design_default_color_primary_dark"
                    android:textColor="@android:color/white" android:paddingLeft="5dp" android:paddingRight="5dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@+id/menu_in_bill_view_recycler_view"
                app:layout_constraintBottom_toBottomOf="@+id/menu_in_bill_view_recycler_view"
                app:layout_constraintEnd_toEndOf="@+id/menu_in_bill_view_recycler_view"
                app:layout_constraintStart_toStartOf="@+id/menu_in_bill_view_recycler_view"
                android:id="@+id/loader_in_menu_view" android:background="#A6FAF7F7"
                android:visibility="gone">

            <ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressBar" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="68dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:id="@+id/constraintLayout" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginRight="8dp" android:layout_marginEnd="8dp"
            tools:visibility="gone">

        <TextView
                android:text="Итого:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" tools:visibility="gone"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bill_view_total" app:layout_constraintStart_toEndOf="@+id/textView5"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/textView5"
                app:layout_constraintBottom_toBottomOf="@+id/textView5" tools:text="1450" tools:visibility="gone"/>
        <TextView
                android:text="Итого со скидкой:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/textView5"
                tools:visibility="gone"/>
        <TextView
                android:text="Итого к оплате:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/textView8"
                tools:visibility="gone"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bill_view_total_discount"
                app:layout_constraintTop_toTopOf="@+id/textView8"
                app:layout_constraintBottom_toBottomOf="@+id/textView8"
                app:layout_constraintStart_toEndOf="@+id/textView8" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" tools:text="1300" tools:visibility="gone"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bill_view_total_payment"
                app:layout_constraintTop_toTopOf="@+id/textView9"
                app:layout_constraintBottom_toBottomOf="@+id/textView9"
                app:layout_constraintStart_toEndOf="@+id/textView9" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" tools:text="1300" tools:visibility="gone"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bill_view_clientsName"
                app:layout_constraintTop_toTopOf="@+id/bill_view_total_payment"
                app:layout_constraintBottom_toBottomOf="@+id/bill_view_total_payment"
                app:layout_constraintStart_toEndOf="@+id/bill_view_total_payment" android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp" tools:text="Иванов Иван" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp" tools:visibility="gone"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bill_view_date_opened" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" tools:text="Открыт: 12/02/2001" android:textSize="10sp"
                android:background="@android:color/darker_gray" android:textColor="@android:color/white"
                tools:visibility="gone"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:id="@+id/bill_view_orders_recycler_view"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
            tools:visibility="gone" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/floatingActionButton_open_menu"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@android:drawable/ic_dialog_dialer"
            android:id="@+id/floatingActionButton_open_menu"
            app:layout_constraintEnd_toEndOf="@+id/bill_view_orders_recycler_view"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
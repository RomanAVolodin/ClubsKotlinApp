                    android:text="Отмена"
                    android:textColor="#F0F8F6F6"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/manual_qnt_enter_button" />

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/search_menu_text_field" />

            <EditText
                    android:id="@+id/search_menu_text_field"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:ems="10"
                    android:hint="несколько букв названия"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
            android:id="@+id/bill_transfer_button"
            style="@android:style/Widget.Material.Light.Button.Small"
            android:layout_width="56dp"
            android:layout_height="27dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:background="#673AB7"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            android:text="Перенос "
            android:textColor="#FAF6F6"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/printer_buttons_container"
            app:layout_constraintEnd_toStartOf="@+id/floatingActionButton_open_menu"
            app:layout_constraintTop_toTopOf="@+id/printer_buttons_container" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/printer_buttons_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="#E2F1E2"
            android:paddingRight="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">


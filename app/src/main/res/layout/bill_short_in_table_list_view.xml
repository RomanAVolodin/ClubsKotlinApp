<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content" app:cardCornerRadius="0dp"
                                   app:cardElevation="0dp"
                                   android:layout_marginTop="4dp"
                                   app:cardMaxElevation="0dp" android:fadingEdge="horizontal|vertical"
                                   app:cardBackgroundColor="#107097A3">
    <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="Счет №"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView6" android:textSize="10sp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp" android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bill_in_table_list_number"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="4dp"
                app:layout_constraintStart_toEndOf="@+id/textView6" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" tools:text="555"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bill_in_table_list_personal_name"
                tools:text="Имя официантки" app:layout_constraintStart_toEndOf="@+id/imageView2"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                android:textSize="10sp" app:layout_constraintTop_toTopOf="@+id/imageView2"
                android:layout_marginTop="4dp"/>
        <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/imageView2" android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/textView6"
                app:srcCompat="@drawable/waitress"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bill_in_table_list_client_name" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" tools:text="скидочный клиент" android:textColor="@color/colorAccent"
                android:textSize="10sp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bill_in_table_list_price" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/bill_in_table_list_client_name"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" tools:text="450" android:textStyle="bold" android:textSize="12sp"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
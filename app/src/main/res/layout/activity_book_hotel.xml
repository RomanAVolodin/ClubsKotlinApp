<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Pages.ClientSearchActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/choose_room_for_client"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F4F5EB"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="#FDFCFC"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <TextView
                    android:id="@+id/chosen_client_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="client name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <Button
                    android:id="@+id/cancel_chosen_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Сбросить"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@android:drawable/stat_sys_phone_call_forward" />

            <TextView
                    android:id="@+id/chosen_client_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="phone number"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView5"
                    app:layout_constraintStart_toEndOf="@+id/imageView5"
                    app:layout_constraintTop_toTopOf="@+id/imageView5" />

            <ImageView
                    android:id="@+id/qr_code__small_view"
                    android:layout_width="83dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/cancel_chosen_user"
                    app:layout_constraintStart_toEndOf="@+id/chosen_client_phone"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/qr_code_for_mobile_english_wikipedia_svg" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/room_chooser_recycler_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"
                app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/choose_user_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="gone">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/user_add_container"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#6FEAC8"
                android:clickable="true"
                android:elevation="5dp"
                android:rotationY="0"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible">

            <Button
                    android:id="@+id/cancel_add_user_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="#E315C8"
                    android:text="Отмена"
                    android:textColor="#F4F2F2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            <EditText
                    android:id="@+id/add_client_last_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="16dp"
                    android:ems="10"
                    android:hint="Фамилия"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView15" />

            <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Укажите данные клиента"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <EditText
                    android:id="@+id/add_client_first_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:ems="10"
                    android:hint="Имя"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/add_client_wrong_lastname_caption" />

            <EditText
                    android:id="@+id/add_client_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:ems="10"
                    android:hint="Номер мобильного телефона"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/add_client_wrong_firstname_caption" />

            <EditText
                    android:id="@+id/add_client_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:ems="10"
                    android:hint="Адрес электронной почты"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/add_client_wrong_phone_caption" />

            <Button
                    android:id="@+id/add_client_proceed_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Добавить"
                    android:textColor="#2E2323"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/add_client_agreement_caption" />

            <CheckBox
                    android:id="@+id/personal_data_agreement"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:text="Ставя отметку, я даю свое согласие на обработку моих персональных данных в соответствии с законом №152-ФЗ &quot;О персональных данных&quot; от 27.07.2006."
                    android:textColor="#2B2929"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/add_client_email"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/add_client_email"
                    app:layout_constraintTop_toBottomOf="@+id/add_client_wron_email_caption" />

            <TextView
                    android:id="@+id/add_client_agreement_caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Согласие на обработку данных обязательно"
                    android:textColor="#F10303"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@+id/personal_data_agreement"
                    app:layout_constraintStart_toStartOf="@+id/personal_data_agreement"
                    app:layout_constraintTop_toBottomOf="@+id/personal_data_agreement"
                    tools:visibility="visible" />

            <TextView
                    android:id="@+id/add_client_wron_email_caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="укажите корректный email"
                    android:textColor="#F60404"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@+id/add_client_email"
                    app:layout_constraintTop_toBottomOf="@+id/add_client_email"
                    tools:visibility="visible" />

            <TextView
                    android:id="@+id/add_client_wrong_lastname_caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="фамилия обазательна для заполнения"
                    android:textColor="#FD0303"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@+id/add_client_last_name"
                    app:layout_constraintTop_toBottomOf="@+id/add_client_last_name"
                    tools:visibility="visible" />

            <TextView
                    android:id="@+id/add_client_wrong_firstname_caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="имя обязательно для заполнения"
                    android:textColor="#FA0101"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@+id/add_client_first_name"
                    app:layout_constraintTop_toBottomOf="@+id/add_client_first_name"
                    tools:visibility="visible" />

            <TextView
                    android:id="@+id/add_client_wrong_phone_caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="укажите корректный номер телефона"
                    android:textColor="#FA0000"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@+id/add_client_phone"
                    app:layout_constraintTop_toBottomOf="@+id/add_client_phone"
                    tools:visibility="visible" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageButton
                android:id="@+id/client_search_button"
                style="@android:style/Widget.Material.ImageButton"
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:layout_marginEnd="16dp"
                android:background="#673AB7"
                app:layout_constraintBottom_toBottomOf="@+id/add_client_button"
                app:layout_constraintEnd_toStartOf="@+id/add_client_button"
                app:layout_constraintTop_toTopOf="@+id/add_client_button"
                app:srcCompat="@android:drawable/ic_menu_search" />

        <Button
                android:id="@+id/add_client_button"
                style="@android:style/Widget.DeviceDefault.Button.Colored"
                android:layout_width="42dp"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@android:drawable/ic_input_add"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/clients_list_recycler_vuiew"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:background="#F5F6EC"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/client_search_field" />

        <EditText
                android:id="@+id/client_search_field"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:hint="Имя, телефон или номер карты"
                android:inputType="textPersonName"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/client_search_button"
                app:layout_constraintEnd_toStartOf="@+id/client_search_button"
                app:layout_constraintStart_toEndOf="@+id/scan_barcode_button"
                app:layout_constraintTop_toTopOf="@+id/client_search_button" />

        <ImageView
                android:id="@+id/scan_barcode_button"
                android:layout_width="72dp"
                android:layout_height="59dp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/client_search_field"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/client_search_field"
                app:srcCompat="@drawable/barcode" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/user_card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#CFE6EF"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible">

        <TextView
                android:id="@+id/user_name_big_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="имя клиента"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <ImageView
                android:id="@+id/qr_code_big_view"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginTop="24dp"
                android:background="#ABCCF1"
                android:fadingEdge="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user_name_big_view"
                app:srcCompat="@drawable/qr_code_for_mobile_english_wikipedia_svg" />

        <TextView
                android:id="@+id/qr_code__number_big_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="номер карты"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/qr_code_big_view"
                app:layout_constraintStart_toStartOf="@+id/qr_code_big_view"
                app:layout_constraintTop_toBottomOf="@+id/qr_code_big_view" />

        <Button
                android:id="@+id/close_card_detailed_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Закрыть карту клиента"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
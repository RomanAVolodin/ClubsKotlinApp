<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:id="@+id/linearLayout">
    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="44dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.6" android:layout_marginTop="2dp" android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp" android:layout_marginLeft="4dp" android:layout_marginStart="4dp"
            android:layout_marginBottom="2dp" android:id="@+id/menugroup_container">

        <TextView
                android:id="@+id/menu_group_title_in_bill_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#020202"
                android:textSize="9sp"
                android:textStyle="bold" />
        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar_in_menugroup" android:indeterminate="true"
                android:paddingLeft="8dp" android:paddingRight="8dp" tools:visibility="visible"
                android:visibility="gone"/>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>